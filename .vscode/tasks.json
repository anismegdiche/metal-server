{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json"
		},
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": ["$eslint-stylish"],
			"label": "npm: build",
			"detail": "tsc"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [
				"$go"
			],
			"label": "npm: lint",
			"detail": "npx eslint --fix ."
		},
		{
			"label": "Circular Check",
			"type": "shell",
			"command": "depcruise -m src",
			"group": "build",
			"problemMatcher": ["$eslint-stylish"]
		}
