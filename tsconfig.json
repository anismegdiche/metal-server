{
    "compilerOptions": {
        "target": "ESNext",
        // "watch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true, // Typing support for this case
        "esModuleInterop": true,        
        "strict": true,
        "skipLibCheck": true
    },
    // "include": ["**/*"],
    "exclude": [
        "node_modules/*",
        "__*/*"
    ]
}